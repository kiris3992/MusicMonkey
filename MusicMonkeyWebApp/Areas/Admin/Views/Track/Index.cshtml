
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Layout/_AdminLayout.cshtml";
}

<style>
    table tbody tr td:nth-child(6) div {
        cursor:pointer;
    }
    table tbody tr td:nth-child(6) svg{
        fill:#fff;
    }
    .tooltip-inner {
        max-width: 200px;
        padding: 3px 8px;
        color: #fff;
        text-align: center;
        background-color: #000;
        border-radius: .30rem;
    }


    .pic-details {
        width: 200px;
        height: 200px;
        -webkit-backface-visibility: hidden;
        border-radius: 50%;
        -webkit-box-shadow: 10px 10px 5px -6px rgba(0,0,0,0.75);
        -moz-box-shadow: 10px 10px 5px -6px rgba(0,0,0,0.75);
        box-shadow: 10px 10px 5px -6px rgba(0,0,0,0.75);
        margin-bottom: 5%;
        transition: transform .7s ease-in-out;
    }

        .pic-details:hover {
            
            transform: rotate(360deg);
        }


 
</style>

<script>
  


    $(document).ready(function () {


        SiteHelper.AjaxHelper.contentLoader(
            'load-tracks',
            (track, i) => 
                `<tr>
                    <td><div class="main__table-text">${track.Id}</div></td>
                    <td><div class="main__table-text">${track.Title}</div></td>
                    <td><div class="main__table-text">${track.DurationSecs}</div></td>
                    <td><div class="main__table-text">${track.AlbumTitle}</div></td>
                    <td><div class="main__table-text">${track.ArtistName}</div></td>
                    <td>
                        <div class="main__table-text" data-toggle="tooltip" data-placement="top" title="${track.TrackGenres.length ? track.TrackGenres.join(', ') : 'N/K'}">&nbsp;
                        ${track.TrackGenres.length ? track.TrackGenres.length == 1 ? track.TrackGenres[0] : track.TrackGenres[0] + ',&nbsp;...' : 'N/K'}
