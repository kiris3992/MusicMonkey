
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Layout/_AdminLayout.cshtml";
}


<script>

    $(document).ready(function () {


        SiteHelper.AjaxHelper.contentLoader(
            'load-artists',
            (artist, i) => ` <tr>
                                    <td><div class="main__table-text">${artist.Id}</div></td>
                                    <td><div class="main__table-text">${artist.Name}</div></td>
                                    <td><div class="main__table-text">${artist.Country}</div></td>
                                    <td><div class="main__table-text">${SiteHelper.Converter.csDateStrToJsDateStr(artist.CareerStartDate)}</div></td>
                                    <td><div class="main__table-text">${artist.ArtistGenres.length ? artist.ArtistGenres.join(', ') : 'N/K'} </div></td>
                                    <td><div class="main__table-text main__table-text--green">${artist.Albums.length}</div></td>

                                    <td>
                                        <div class="main__table-btns">
                                            <a href="#modal-details" class="main__table-btn main__table-btn--view open-modal">
                                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M21.92,11.6C19.9,6.91,16.1,4,12,4S4.1,6.91,2.08,11.6a1,1,0,0,0,0,.8C4.1,17.09,7.9,20,12,20s7.9-2.91,9.92-7.6A1,1,0,0,0,21.92,11.6ZM12,18c-3.17,0-6.17-2.29-7.9-6C5.83,8.29,8.83,6,12,6s6.17,2.29,7.9,6C18.17,15.71,15.17,18,12,18ZM12,8a4,4,0,1,0,4,4A4,4,0,0,0,12,8Zm0,6a2,2,0,1,1,2-2A2,2,0,0,1,12,14Z" /></svg>
                                            </a>
                                            <a href="~/Admin/Artist/Edit" class="main__table-btn main__table-btn--edit">
                                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M22,7.24a1,1,0,0,0-.29-.71L17.47,2.29A1,1,0,0,0,16.76,2a1,1,0,0,0-.71.29L13.22,5.12h0L2.29,16.05a1,1,0,0,0-.29.71V21a1,1,0,0,0,1,1H7.24A1,1,0,0,0,8,21.71L18.87,10.78h0L21.71,8a1.19,1.19,0,0,0,.22-.33,1,1,0,0,0,0-.24.7.7,0,0,0,0-.14ZM6.83,20H4V17.17l9.93-9.93,2.83,2.83ZM18.17,8.66,15.34,5.83l1.42-1.41,2.82,2.82Z" /></svg>
                                            </a>
                                            <a href="#modal-delete" class="main__table-btn main__table-btn--delete open-modal">
                                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M10,18a1,1,0,0,0,1-1V11a1,1,0,0,0-2,0v6A1,1,0,0,0,10,18ZM20,6H16V5a3,3,0,0,0-3-3H11A3,3,0,0,0,8,5V6H4A1,1,0,0,0,4,8H5V19a3,3,0,0,0,3,3h8a3,3,0,0,0,3-3V8h1a1,1,0,0,0,0-2ZM10,5a1,1,0,0,1,1-1h2a1,1,0,0,1,1,1V6H10Zm7,14a1,1,0,0,1-1,1H8a1,1,0,0,1-1-1V8H17Zm-3-1a1,1,0,0,0,1-1V11a1,1,0,0,0-2,0v6A1,1,0,0,0,14,18Z" /></svg>
                                            </a>
                                        </div>
                                    </td>
                                </tr>`,
            () => {



                $('.open-modal').magnificPopup({
                    fixedContentPos: true,
                    fixedBgPos: true,
                    overflowY: 'auto',
                    type: 'inline',
                    preloader: false,
                    focus: '#username',
                    modal: false,
                    removalDelay: 300,
                    mainClass: 'my-mfp-zoom-in',
                });

                $('.modal__btn--dismiss').on('click', function (e) {
                    e.preventDefault();
                    $.magnificPopup.close();
                });

                
            },
            new SiteHelper.AjaxHelper.ajaxObject('/api/ArtistApi')).start();




    });
</script>

<body>
    <!-- header -->
    <header class="header">
        <div class="header__content">
            <!-- header logo -->
            <a href="index.html" class="header__logo">
                <img src="img/logo.svg" alt="">
            </a>
            <!-- end header logo -->
            <!-- header menu btn -->
            <button class="header__btn" type="button">
                <span></span>
                <span></span>
                <span></span>
            </button>
            <!-- end header menu btn -->
        </div>
    </header>
    <!-- end header -->
    <!-- main content -->
    <main class="main">
        <div class="container-fluid">
            <div class="row">
                <!-- main title -->
                <div class="col-12">
                    <div class="main__title">
                        <a href="~/Admin/Artist/Add"><i class="bi bi-plus-square"></i></a>
                        <h2>Artists</h2>
                        <span id="top-artists" class="main__title-stat"> ...</span>

                        <div class="main__title-wrap">
                            <!-- filter sort -->
                            <div class="filter" id="filter__sort">
                                <span class="filter__item-label">Sort by:</span>

                                <div class="filter__item-btn dropdown-toggle" role="navigation" id="filter-sort" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <input type="button" value="Name">
                                    <span></span>
                                </div>

                                <ul class="filter__item-menu dropdown-menu scrollbar-dropdown" aria-labelledby="filter-sort">
                                    <li>Name</li>
                                    <li>Country</li>
                                    <li>Genre</li>
                                </ul>
                            </div>
                            <!-- end filter sort -->
                            <!-- search -->
                            <form action="#" class="main__title-form">
                                <input type="text" placeholder="Find artists..">
                                <button type="button">
                                    <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg"><circle cx="8.25998" cy="8.25995" r="7.48191" stroke="#3f008c" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></circle><path d="M13.4637 13.8523L16.3971 16.778" stroke="#3f008c" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path></svg>
                                </button>
                            </form>
                            <!-- end search -->
                        </div>
                    </div>
                </div>
                <!-- end main title -->
                <!-- users -->
                <div class="col-12">
                    <div class="main__table-wrap">
                        <table class="main__table">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>NAME</th>
                                    <th>COUNTRY</th>
                                    <th>CAREER STARTED DATE</th>
                                    <th>GENRE</th>
                                    <th>ALBUMS</th>
                                    <th>ACTIONS</th>
                                </tr>
                            </thead>

                            <tbody id="load-artists">
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- end users -->
                <!-- paginator -->
                <div class="col-12">
                    <div class="paginator">
                        <span class="paginator__pages">10 from 14 452</span>

                        <ul class="paginator__paginator">
                            <li>
                                <a href="#">
                                    <svg width="14" height="11" viewBox="0 0 14 11" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M0.75 5.36475L13.1992 5.36475" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round"></path><path d="M5.771 10.1271L0.749878 5.36496L5.771 0.602051" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round"></path></svg>
                                </a>
                            </li>
                            <li class="active"><a href="#">1</a></li>
                            <li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#">4</a></li>
                            <li>
                                <a href="#">
                                    <svg width="14" height="11" viewBox="0 0 14 11" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M13.1992 5.3645L0.75 5.3645" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round"></path><path d="M8.17822 0.602051L13.1993 5.36417L8.17822 10.1271" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round"></path></svg>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- end paginator -->
            </div>
        </div>
    </main>
    <!-- end main content -->
    <!-- modal view -->
    <div id="modal-details" class="zoom-anim-dialog mfp-hide modal">
        <h6 class="modal__text">Track Details</h6>
        <br />
        <div class="modal__title">
            <img src="https://www.biography.com/.image/t_share/MTQ3NjM5MTEzMTc5MjEwODI2/eminem_photo_by_dave_j_hogan_getty_images_entertainment_getty_187596325.jpg" class="pic-details">
            <h6>Eminem</h6>
        </div>

        <div class="row">


            <div class="col-12 col-md-6 col-lg-12 col-xl-6">
                <div class="sign__label"><p><b>Id:</b> 25</p></div>
                <hr />
            </div>

            <div class="col-12 col-md-6 col-lg-12 col-xl-6">
                <div class="sign__label"><p><b>Country:</b> Greece</p></div>
                <hr />
            </div>

            <div class="col-12 col-md-6 col-lg-12 col-xl-6">
                <div class="sign__label"><p><b>Career Start Date:</b> 18/08/2000</p></div>
                <hr />
            </div>





            <div class="col-12 col-md-6 col-lg-12 col-xl-6">
                <div class="sign__label"><p><b>Genre:</b> <br />Rock, Folk, Electro Punk, </p></div>
            </div>


            <div class="col-12 col-md-6 col-lg-12 col-xl-6">
                <div class="sign__label">
                    <p>
                        <b>Albums:</b>
                        <ul>
                            <li>My life will goes on </li>
                            <li>My life will goes on </li>
                            <li>My life will goes on </li>
                        </ul>
                    </p>
                </div>
            </div>

        </div>



        <hr />
        <div class="modal__btns">
            <button class="modal__btn modal__btn--dismiss" type="button">Dismiss</button>
        </div>

    </div>
    <!-- end modal view -->
    <!-- modal delete -->
    <div id="modal-delete" class="zoom-anim-dialog mfp-hide modal">
        <h6 class="modal__title">Item delete</h6>

        <p class="modal__text">Are you sure to permanently delete this artist?</p>

        <div class="modal__btns">
            <button class="modal__btn modal__btn--apply" type="button">Delete</button>
            <button class="modal__btn modal__btn--dismiss" type="button">Dismiss</button>
        </div>
    </div>
    <!-- end modal delete -->

</body>


