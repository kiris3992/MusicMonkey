<script>


    $(document).ready(function () {


        SiteHelper.AjaxHelper.contentLoader(
            'top-tracks',
            (track, i) => `<tr>
                                <td>
                                    <div class="main__table-text">${track.Id}</div>
                                </td>
                                <td>
                                    <div class="main__table-text"><a href="#">${track.Title}</a></div>
                                </td>
