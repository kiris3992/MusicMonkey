
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Album";
}

<script>
    $(document).ready(function () {
        SiteHelper.AjaxHelper.contentLoader(
            'albums-container',
            (album, i) => `<div class="col-lg-4 col-md-6 col-sm-6">
                                <div class="discography__item">
                                    <div class="discography__item__pic">
                                        <object data="${album.CoverPhotoUrl == '' ? '_' : album.CoverPhotoUrl}" type="image/png">
                                            <img src="/Content/Assets/img/discography/no-photo.png" alt="${album.Title}">
                                        </object>
                                    </div>
                                    <div class="discography__item__text">
                                        <span>${album.Title}</span>
                                        <h4>Relase date : ${SiteHelper.Converter.csDateStrToJsDateStr(album.ReleaseDate, 'mm.yyyy')}</h4>
                                        <h4>Tracks : ${album.Tracks.length}</h4>
                                        <h6>Genres : ${album.AlbumGenres.join(', ')}</h6>
                                    </div>
                                </div>
                            </div>`,
            null,
            new SiteHelper.AjaxHelper.ajaxObject('/api/AlbumApi?type=full')).start();
    });
</script>

<!-- Discography Section Begin -->
<section class="discography spad">

    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title center-title">
                    <h2>All</h2>
                    <h1>Albums</h1>
                </div>
            </div>
        </div>

        <div id="albums-container" class="row"></div>
    </div>
</section>
<!-- Discography Section End -->